@model List<BildstudionDV.BI.ViewModels.EnhetViewModel>

    <form action="~/inventarie/addenhet">
        <button class="btn-outline-success btn-block btn nav-link">Lägg till ny Enhet</button>
    </form>
    <table class="table table-striped table-bordered">
        <thead>
            <tr style="background-color: darkgray;color:black;">
                <th>Enhetens Namn</th>
                <th>Chef Namn</th>
                <th>Redigera Enhet</th>
                <th>Se Grupper</th>
                <th>Grupper i Enheten</th>
            </tr>
        </thead>
        @foreach (var enhet in Model)
        {
    <tr style="color:white;">
        <td>@enhet.Namn</td>
        <td>@enhet.ChefNamn</td>
        <td>
            <input type="button" class="btn btn-info" onclick='window.location.href = "../inventarie/editenhet?namn=@enhet.Namn"' value="Redigera Enheten" />
        </td>
        <td>
            <input type="button" class="btn btn-dark" onclick='window.location.href = "../inventarie/enhet?namn=@enhet.Namn"' value="Se Grupper" />
        </td>
        <td>@enhet.grupperInEnhet.Count grupper i enheten</td>

    </tr>
        }
        <tfoot>
            <tr style="background-color: darkgray;color:black;">
                <th>Enhetens Namn</th>
                <th>Chef Namn</th>
                <th>Redigera Enhet</th>
                <th>Se Grupper</th>
                <th>Grupper i Enheten</th>
            </tr>
        </tfoot>
    </table>