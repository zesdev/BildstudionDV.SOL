@model List<BildstudionDV.BI.ViewModels.EnhetViewModel>
@{ViewBag.Title = "Enheter"; }
<br>
<form action="~/inventarie/addenhet">
    <button class="btn-success btn-block btn" style="height:100px;">Lägg till ny Enhet</button>
</form>
<br />
@if (Model.Count != 0)
{
<button class="btn-light btn-block btn" onclick='window.location.href = "../inventarie/ExportAllGrupperInventarie"' style="border-color:black;">Exportera Alla Grupper Till ZIP fil</button>
<br />

@foreach (var enhet in Model.OrderBy(x => x.Namn).ToList())
        {
<center>
    <div class="row">
        <div class="col"></div>
        <div style="background-color:black;color:white; shape-margin:30px; margin: 20px, 20px, 20px, 20px;" class="rounded col-6">
            <h1>@enhet.Namn</h1>
            <h3>@enhet.ChefNamn</h3>

            <input type="button" class="btn btn-info btn-block" onclick='window.location.href = "../inventarie/editenhet?namn=@enhet.Namn"' value="Redigera Enheten" /><br />


            <input type="button" class="btn btn-dark btn-block" onclick='window.location.href = "../inventarie/enhet?namn=@enhet.Namn"' value="Se Grupper" /><br />
            <h4>
                @enhet.grupperInEnhet.Count grupper i enheten
            </h4>
        </div>
        <div class="col"></div>
    </div>
    <br />
</center>
        }

}
@if(Model.Count == 0)
{
<h1>Här var det tomt! Lägg till en enhet för att se lite liv</h1>
}