@model BildstudionDV.BI.ViewModels.EnhetViewModel


<input type="button" class="btn btn-block btn-info" onclick='window.location.href = "../inventarie/index"' value="Tillbaka till Enheter" />
<br />

<h2>Redigerar i Enhet:</h2>
<h3>@Model.Namn</h3>
<form action="~/inventarie/addgrupp">
    <button class="btn-outline-success btn-block btn nav-link">Lägg till ny Grupp</button>
</form>
@if (Model.grupperInEnhet.Count != 0)
{
<table class="table table-striped table-bordered">
    <thead>
        <tr style="background-color: darkgray;color:black;">
            <th>Gruppens Namn</th>
            <th>Inventarie Antal</th>
            <th>Redigera Grupp</th>
            <th>Se Inventarier</th>
        </tr>
    </thead>
    @foreach (var grupp in Model.grupperInEnhet.OrderBy(x => x.GruppNamn).ToList())
    {
        <tr style="color:white;">
            <td>@grupp.GruppNamn</td>
            <td>@grupp.InventarierInGrupp.Count registrerade Inventarier</td>
            <td>
                <input type="button" class="btn btn-info" onclick='window.location.href = "../inventarie/editgrupp?namn=@grupp.GruppNamn"' value="Redigera Gruppen" />
            </td>
            <td>
                <input type="button" class="btn btn-dark" onclick='window.location.href = "../inventarie/grupp?namn=@grupp.GruppNamn"' value="Se Inventarier" />
            </td>
        </tr>
    }
    <tfoot>
        <tr style="background-color: darkgray;color:black;">
            <th>Gruppens Namn</th>
            <th>Inventarie Antal</th>
            <th>Redigera Grupp</th>
            <th>Se Inventarier</th>
        </tr>
    </tfoot>
</table>
}
@if(Model.grupperInEnhet.Count == 0)
{
    <h1>Här var det tomt! Lägg till en grupp för att se lite liv.</h1>
}