@model List<BildstudionDV.BI.ViewModels.AttendenceViewModel>
<h2>Välj ett datum i en vecka för att redigera närvaron för den veckan:</h2>
<h3>@ViewBag.date </h3>
<br />
@using (Html.BeginForm()) {
<input type="date" name="Date" id="Date"/>
<input type="submit" value="Se närvaro för datum" class="btn btn-info" />
}
<br />
@if (Model.Count != 0)
{
<table>
    <thead>
        <tr>
            <th><b>Deltagare</b></th>
            <th><b>Måndag</b></th>
            <th><b>Tisdag</b></th>
            <th><b>Onsdag</b></th>
            <th><b>Torsdag</b></th>
            <th><b>Fredag</b></th>
        </tr>
    </thead>
    @foreach (var attendenceItem in Model)
    {
        @Html.Partial("_AttendenceDate", attendenceItem);
    }
    <tfoot>
        <tr>
            <th><b>Deltagare</b></th>
            <th><b>Måndag</b></th>
            <th><b>Tisdag</b></th>
            <th><b>Onsdag</b></th>
            <th><b>Torsdag</b></th>
            <th><b>Fredag</b></th>
        </tr>
    </tfoot>
</table>
}