@model List<BildstudionDV.BI.ViewModels.DelJobbViewModel>
<input type="button" class="btn btn-block btn-info" onclick='window.location.href = "../jobb/jobb"' value="Tillbaka till Index" />
<br />
<h1>Visar jobb för @ViewBag.KundNamn - @ViewBag.JobbTitel</h1>
<form action="~/jobb/adddeljobb?AccessId=@ViewBag.AccessId">
    <button class="btn-outline-success btn-block btn nav-link">Lägg Till Nytt DelJobb</button>
</form>
<b>
    <table class="table table-striped table-bordered">
        <thead>
            <tr style="background: black;color:white;">
                <th>Status På Jobbet</th>
                <th>Namn</th>
                <th>VemGör</th>
                <th>Redigera</th>
                <th>Ta Bort</th>
            </tr>
        </thead>
        @foreach (var DelJobb in Model.Where(x => x.StatusPåJobbet != BildstudionDV.BI.Models.Jobb.DelJobbStatus.Klar).ToList())
        {
    <tr style="color:white;">
        <td>@DelJobb.StatusPåJobbet.ToString()</td>
        <td>@DelJobb.Namn</td>
        <td>@DelJobb.VemGör</td>
        <td>
            <input type="button" class="btn btn-info" onclick='window.location.href = "../jobb/editdeljobb?AccessId=@DelJobb.AccessId"' value="Redigera" />
        </td>
        <td>
            <input type="button" class="btn btn-danger" onclick="Remove(@DelJobb.AccessId)" value="Ta Bort" />
        </td>
    </tr>
        }
        @foreach (var DelJobb in Model.Where(x => x.StatusPåJobbet == BildstudionDV.BI.Models.Jobb.DelJobbStatus.Klar).ToList())
        {
            <tr style="background: darkgreen; color: white">
                <td>@DelJobb.StatusPåJobbet.ToString()</td>
                <td>@DelJobb.Namn</td>
                <td>@DelJobb.VemGör</td>
                <td>
                    <input type="button" class="btn btn-info" onclick='window.location.href = "../jobb/editdeljobb?AccessId=@DelJobb.AccessId"' value="Redigera" />
                </td>
                <td>
                    <input type="button" class="btn btn-danger" onclick="Remove(@DelJobb.AccessId)" value="Ta Bort" />
                </td>
            </tr>
        }
        <tfoot>
            <tr style="background: black;color:white;">
                <th>Status På Jobbet</th>
                <th>Namn</th>
                <th>VemGör</th>
                <th>Redigera</th>
                <th>Ta Bort</th>
            </tr>
        </tfoot>
    </table>
</b>
<script>
    function Remove(accessid) {
        var r = confirm("Du ta nu bort denna deltagare, är du säker på att du vill göra det? All hens närvaro kommer då försvinna.");
        if (r == true) {
            window.location.href = "../jobb/RemoveDeljobb?accessid=" + accessid;
        }
    }
</script>